<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PesanActivity">

    <TextView
        android:id="@+id/header_pesan"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:drawablePadding="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_arrow_back"
        android:background="@drawable/radiuspink"/>

<LinearLayout
    app:layout_constraintTop_toBottomOf="@id/header_pesan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="16dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/usericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:src="@drawable/ic_akun"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/n_pesan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Farah"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            <TextView
                android:id="@+id/d_pesan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/pesan1"
                android:text="Halo kak, bisa bantu saya pilih ini?"
                android:textSize="14sp" />
        </LinearLayout>
</LinearLayout>
    <TextView
        android:padding="16dp"
        android:layout_margin="16dp"
        android:id="@+id/t_pesan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kemarin"
        android:textSize="10dp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/header_pesan"/>

</androidx.constraintlayout.widget.ConstraintLayout>